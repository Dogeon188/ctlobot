{
  "env": {
    "commonjs": true,
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-console": "warn",
    "no-undef": "warn",
    "camelcase": "error",
    "no-control-regex": "off",
    "quotes": [
      "warn",
      "double"
    ],
    "array-bracket-spacing": [
      "warn",
      "always"
    ],
    "object-curly-spacing": [
      "warn",
      "always"
    ],
    "indent": [
      "error",
      "tab",
      {
        "ignoredNodes": [
          "TemplateLiteral"
        ]
      }
    ]
  }
}
